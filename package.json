{
  "name": "DarkShardDesign-Server",
  "version": "0.0.1",
  "description": "DarkShard Design backend server API",
  "main": "dist",
  "scripts": {
    "dev": "nodemon -w src --exec \"babel-node src --presets es2015,stage-0\"",
    "build": "babel src -s -D -d dist --presets es2015,stage-0",
    "start": "node dist",
    "prestart": "npm run -s build",
    "test": "eslint src",
    "docker:make": "docker build -t dsd-server .",
    "docker:run": "docker run --name dsd-server -d -p 9090:9090 dsd-server",
    "docker:clean": "docker stop dsd-server && docker rm dsd-server && docker rmi dsd-server",
    "docker:refresh": "yarn docker:clean && yarn docker:make && yarn docker:run"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "module"
    },
    "env": {
      "node": true
    },
    "rules": {
      "no-console": 0,
      "no-unused-vars": 1
    }
  },
  "repository": "https://github.com/DarkShardDesign/darksharddesign_server.git",
  "author": "Sean Przybyla",
  "dependencies": {
    "body-parser": "^1.13.3",
    "compression": "^1.5.2",
    "cors": "^2.7.1",
    "express": "^4.13.3",
    "morgan": "^1.8.0",
    "resource-router-middleware": "^0.6.0"
  },
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-core": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-0": "^6.5.0",
    "eslint": "^3.1.1",
    "nodemon": "^1.9.2"
  }
}